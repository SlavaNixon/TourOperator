<h5 class="mb-2 videl-red-no-underline"><%= flash[:alert] if flash[:alert] %></h5>
<h2 align="left">Каталог</h2>
<div class="container">
    <div class="row">
      <% @product.each do |product| %>
        <div class="col-6">
          <%= image_tag product.product_images.find_by(title: "Title").image, align:"left", class:"mb-3 w-50" %>
          <div>
              <%= link_to product.name, product_path(product.id) %>
              <div class="mt-3">Цена поездки: <%= product.price.round %> ₽</div>
          </div>
        </div>
      <% end %>
    </div>
</div>
