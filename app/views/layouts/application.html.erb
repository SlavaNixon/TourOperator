<html lang="ru">
<head>
  <title>Туроператор "Золотая Середина"</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>

  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body class="back">

<table border="0" width="1200" cellpadding="0" cellspacing="0" align="center" bgcolor="#CACACA">
  <tr>
    <td width="150" align="center"><%= image_tag "img/logo.png" %></td>
    <td align="center"><H1>Золотая Середина</H1></td>
    <td width="200">
      <table  cellpadding="5"  width="100%">
        <tr>
          <td width="40%" align="right">логин: </td>
          <td align="right"><input type="text" value="логин"></td>
        </tr>
        <tr>
          <td width="40%" align="right">пароль: </td>
          <td align="right"><input type="password" value="логин"></td>
        </tr>
        <tr>
          <td align="right"><input class="btn btn-light" type="submit" value="войти"></td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table border="0" width="1200" cellpadding="5" cellpadding="0" align="center" bgcolor="#ECECEC" >
  <tr>
    <td align="center"><%= link_to 'Главная', root_path %></td>
    <td align="center"><%= link_to 'Каталог', catalog_index_path %></td>
    <td align="center"><%= link_to 'Контакты', contacts_path %></td>
  </tr>
</table>
<BR>
<table border="0" width="1200" cellpadding="5" cellpadding="0" align="center">
  <tr>
    <td width="150" cellpadding="5" valign="top" align="center" bgcolor=white>
      <div class="mb-4"><%= link_to 'О нас', about_us_path %><BR></div>
      <div class="mb-4"><%= link_to 'История фирмы', history_path %><BR></div>
      <div class="mb-4"><%= link_to 'Сотрудники', staff_index_path %><BR></div>
    </td>
    <td>
      <%= yield %>
    </td>
</table>

<hr/>
<p align="center">
  © <%= Time.now.year %> — Все права защищены
</p>
</body>
</html>
